{
  "name": "ODIA AI - Agent Lexi: Nigerian WhatsApp Voice Assistant",
  "short_name": "Agent Lexi",
  "description": "Nigeria's smartest WhatsApp voice assistant. Handles 2,500+ daily conversations in English, Pidgin, Yoruba & Igbo with 98% satisfaction rate.",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#141414",
  "theme_color": "#00D4AA",
  "orientation": "portrait-primary",
  "categories": ["business", "productivity", "communication", "utilities"],
  "lang": "en-NG",
  "dir": "ltr",
  "scope": "/",
  "prefer_related_applications": false,
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+agentlexi",
      "url": "/agent-lexi?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/agent-lexi",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/agent-lexi",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
